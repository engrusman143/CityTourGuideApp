<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="actionBarStyle">@style/BTGAppBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- App bar style -->
    <style name="BTGAppBarStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>

    <!-- Tab style for list type name -->
    <style name="ListTypeTab" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/color_primary</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/ListTypeTabTextAppearance</item>
    </style>

    <!-- Text appearance style for a list type tab -->
    <style name="ListTypeTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style for a list type of items -->
    <style name="ListTypeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- ListItem style -->
    <style name="ListItemStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ListItemTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/subtitle_text_view</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginLeft">@dimen/title_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/title_horizontal_margin</item>
        <item name="android:textColor">@color/color_icons</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemSubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@+id/item_image_view</item>
        <item name="android:layout_alignLeft">@+id/title_text_view</item>
        <item name="android:layout_alignStart">@+id/title_text_view</item>
        <item name="android:layout_marginBottom">@dimen/subtitle_margin_bottom</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_divider</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="ListItemImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


</resources>
